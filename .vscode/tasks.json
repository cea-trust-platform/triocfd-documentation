{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "source ./.venv/bin/activate && cd doc && make html",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "rebuild",
            "type": "shell",
            "command": "source ./.venv/bin/activate && cd doc && make clean html",
            "problemMatcher": [],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "configure",
            "type": "shell",
            "command": "rm -rf .venv && python -m venv .venv && source ./.venv/bin/activate && pip install -r doc/requirements.txt",
            "problemMatcher": []
        },
        {
            "label": "open",
            "type": "shell",
            "command": "sensible-browser ${workspaceRoot}/doc/build/html/index.html",
            "problemMatcher": []
        }
    ]
}